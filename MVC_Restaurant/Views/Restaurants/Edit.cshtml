@model EditRestaurantViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RestaurantDTO.Id" />
            <input type="hidden" asp-for="Logo" />
            <div class="form-group">
                <label asp-for="RestaurantDTO.Name" class="control-label"></label>
                <input asp-for="RestaurantDTO.Name" class="form-control" />
                <span asp-validation-for="RestaurantDTO.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantDTO.Description" class="control-label"></label>
                <input asp-for="RestaurantDTO.Description" class="form-control" />
                <span asp-validation-for="RestaurantDTO.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantDTO.Adress" class="control-label"></label>
                <input asp-for="RestaurantDTO.Adress" class="form-control" />
                <span asp-validation-for="RestaurantDTO.Adress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantDTO.Phone" class="control-label"></label>
                <input asp-for="RestaurantDTO.Phone" class="form-control" />
                <span asp-validation-for="RestaurantDTO.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantDTO.WorkStart" class="control-label"></label>
                <input asp-for="RestaurantDTO.WorkStart" type="time" class="form-control" />
                <span asp-validation-for="RestaurantDTO.WorkStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RestaurantDTO.WorkEnd" class="control-label"></label>
                <input asp-for="RestaurantDTO.WorkEnd" type="time" class="form-control" />
                <span asp-validation-for="RestaurantDTO.WorkEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="logo" class="control-label">Logo file</label>
                <input type="file" name="logo" id="logo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
