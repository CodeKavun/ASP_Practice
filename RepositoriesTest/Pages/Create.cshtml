@model RepositoriesTest.Pages.CreateModel
@{
}

<h1>Add film</h1>
<form method="post" asp-antiforgery="true">
    <label asp-for="@Model.Film.Title"></label>
    <input type="text" asp-for="@Model.Film.Title" />
